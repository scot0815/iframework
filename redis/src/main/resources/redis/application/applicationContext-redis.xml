<?xml version="1.0" encoding="UTF-8"?>
<beans default-lazy-init="false"
       xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd" >
    <!-- Annotation Initilization -->

    <context:annotation-config/>
    <context:component-scan base-package="com.scot.permissions.redis" />

    <bean id="jedisClusterFactory" class="com.scot.permissions.redis.factory.JedisClusterFactory" init-method="afterPropertiesSet">
        <property name="addressConfig" value="classpath:${redis-config}"/>
        <property name="addressKeyPrefix" value="${redis-keyPrefix}" />
        <property name="timeout" value="${redis-timeout}" />
        <property name="maxRedirections" value="${redis-maxRedirections}" />
        <property name="genericObjectPoolConfig" ref="genericObjectPoolConfig" />
    </bean>

    <bean name="genericObjectPoolConfig" class="org.apache.commons.pool2.impl.GenericObjectPoolConfig" >
        <property name="maxWaitMillis" value="${redis-maxWaitMillis}" />
        <property name="maxTotal" value="${redis-maxTotal}" />
        <property name="minIdle" value="${redis-minIdle}" />
        <property name="maxIdle" value="${redis-maxIdle}" />
    </bean>

</beans>
